<!DOCTYPE html>
<html>

<head>
  <title>DAB - Rent Vehicles</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/styles.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
  <script src="../js/common.js"></script>
</head>

<body>
  <%- include('./partials/navbar.ejs', { user: user }) %>
  <div class="container-fluid mt-5">
    <h2 class="p-3 text-center">Vehicles for Rent - Colors</h2>
    <div class="list-group">
      <div class="row px-3 py-1 w-100">
        <span class="col py-1 bg-noroff">Id</span>
        <span class="col py-1 bg-noroff">Name</span>
        <span class="col py-1 bg-noroff">Options</span>
      </div>
      <% colours.forEach(function(colour) { %>
        <div class="row px-3 py-1 w-100">
          <span class="col py-1 bg-light">
            <%= colour.Id %>
          </span>
          <span class="col py-1 bg-light">
            <%= colour.Name %>
          </span>
          <span class="col py-1 bg-light text-center">
            <button class="btn-sm btn-warning" onclick="showUpdateColourModal(<%= colour.Id %>, '<%= colour.Name %>')">Update color</button>
            <form id="delete-form-<%= colour.Id %>" action="/colours/<%= colour.Id %>/delete" method="POST" style="display: inline;">
              <button class="btn-sm btn-danger" onclick="return confirmDelete('<%= colour.Name %>')">Delete color</button>
            </form>
          </span>
        </div>
      <% }); %>
      <hr>
      <div class="row">
        <div class="col-4"></div>
        <div class="col-4 text-center mt-2">
          <button class="btn btn-success" id="btn-add-colour" onclick="addColor()">Add New Color</button>
          <div id="add-color-form" style="display: none;">
            <form action="/colours/add" method="POST">
              <div class="form-group mt-2">
                <label for="colorName">Color Name:</label>
                <input type="text" class="form-control" id="colorName" name="colorName" required>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
              <button type="button" class="btn btn-secondary" onclick="cancelAddColor()">Cancel</button>
            </form>
          </div>
        </div>
        <div class="col-4"></div>
      </div>
    </div>
  </div>

  <!-- Update color modal -->
  <div class="modal fade" id="updateColorModal" tabindex="-1" aria-labelledby="updateColorModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="updateColorModalLabel">Update Color</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="update-color-form" action="/colours/update" method="POST">
            <input type="hidden" id="update-color-id" name="id">
            <div class="form-group mb-3">
              <label for="update-color-name">Color Name:</label>
              <input type="text" class="form-control" id="update-color-name" name="colorName" required>
            </div>
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-primary">Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    function addColor() {
      document.getElementById('add-color-form').style.display = 'block';
      document.getElementById('btn-add-colour').style.display = 'none';
    }

    function cancelAddColor() {
      document.getElementById('add-color-form').style.display = 'none';
      document.getElementById('btn-add-colour').style.display = 'block';
    }

    function showUpdateColourModal(id, name) {
      $('#update-color-id').val(id);
      $('#update-color-name').val(name);
      $('#updateColorModal').modal('show');
    }

    function confirmDelete(colorName) {
      return confirm(`Are you sure you want to delete '${colorName}'?`);
    }
  </script>
</body>
</html>
